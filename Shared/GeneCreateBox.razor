<div>
    <span style="font-size:15px;font-weight:bold">@GT : </span>
    <input placeholder="표현형" @onchange="phenoChanged" value="@(GT[0].Phenotype())"/>
</div>

@code {
    [Parameter]
    public int Dispnum {get;set;}
    [Parameter]
    public string GT {get;set;}
    private void phenoChanged(ChangeEventArgs e) {
        var p = e.Value.ToString();
        GT[0].SetPhenotype(p);
    }
}